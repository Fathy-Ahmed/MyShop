@model List<Category>
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Categories";
    //Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Add new Category</a>
</div>
<table class="table table-hover" width="100%">
    <thead>
    <tr class="text-bold">
        <td>Name</td>
        <td>Description</td>
        <td>Date Created</td>
        <td>Actions</td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
                </td>
        </tr>
    }
</table>

